<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="loggers.xml"/>
    
    <bean id="client" class="com.mylab.spring.client.Client">
        <!-- constructor bean injection -->
        <constructor-arg value="1" index="0"/><!--type="java.lang.Long" name="id" -->
        <constructor-arg value="J. Doe" index="1"/>
        <property name="greeting" value="Hi!"/>
    </bean>

    <bean id="app" class="com.mylab.spring.App">
        <constructor-arg ref="client"/>
        <constructor-arg>
            <map>
                <entry>
                    <key><null/></key>
                    <ref bean="cachedLogger"/><!--from loggers-->
                </entry>
                <entry key="INFO" value-ref="consoleLogger"/>
                <entry key="ERROR" value-ref="combinedLogger"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="event" class="com.mylab.spring.event.Event" scope="prototype" lazy-init="true">
        <constructor-arg>
            <bean class="java.util.Date"/>
            <!--creates an instance of Date as a bean-->
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat"
                  factory-method="getDateTimeInstance"/>
            <!--creates an instance of Format from an abstract class' static method-->
        </constructor-arg>
        <property name="type" value="INFO"/>
    </bean>
</beans>