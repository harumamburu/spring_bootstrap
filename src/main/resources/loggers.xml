<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleLogger" class="com.mylab.spring.logging.ConsoleEventLogger"/>

    <bean id="fileLogger" class="com.mylab.spring.logging.FileEventLogger" init-method="init">
        <constructor-arg index="0" value="application.log"/>
        <constructor-arg index="1" value="UTF-8"/>
    </bean>

    <bean id="cachedLogger" class="com.mylab.spring.logging.CacheEventLogger"
          destroy-method="destroy" parent="fileLogger">
        <constructor-arg index="2" value="10"/>
    </bean>

</beans>